{
  "compilerOptions": {
    "lib": ["es6", "dom" ],
    "types": ["node", "reflect-metadata", "inversify"],
    "module": "commonjs",
    "target": "ESNEXT",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./src/*"]
    }
},
  "exclude": [
    "node_modules"
  ]
}
